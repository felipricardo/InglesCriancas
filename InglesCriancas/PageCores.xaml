<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InglesCriancas.PageCores"
             Title="Cores">
    <ContentPage.Content>
        <ScrollView>
            <!--armazena todas as cores-->
            <StackLayout>
                <!--representa uma cor-->
                <StackLayout Orientation="Horizontal">
                    <Image Source="color_black"/>
                    <!--organiza os textos-->
                    <StackLayout>
                        <Label FontSize="Large" Text="Inglês: Black" VerticalOptions="EndAndExpand"/>
                        <Label FontSize="Large" Text="Português: Preto" VerticalOptions="StartAndExpand"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="color_brown"/>
                    <!--organiza os textos-->
                    <StackLayout>
                        <Label FontSize="Large" Text="Inglês: Brown" VerticalOptions="EndAndExpand"/>
                        <Label FontSize="Large" Text="Português: Marrom" VerticalOptions="StartAndExpand"/>
                    </StackLayout>
                </StackLayout>
                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>