<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InglesCriancas.MainPage"
             Title="Inglês para crianças">

    <StackLayout>
        <Image Source="logoapp"/>
        <Button Text="Cores"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                x:Name="btCores"
                Clicked="btCores_Clicked"
                BackgroundColor="MediumSeaGreen"
                TextColor="White"/>
        <Button Text="Números"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                x:Name="btNumeros"
                Clicked="btNumeros_Clicked"
                BackgroundColor="#0437F2"
                TextColor="White"/>
        <Button Text="Família"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                x:Name="btFamilia"
                Clicked="btFamilia_Clicked"
                BackgroundColor="#ff6347"
                TextColor="White"/>
        <Button Text="Sair"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                x:Name="btSair"
                Clicked="btSair_Clicked"/>
        <Image Source="logojake"/>
    </StackLayout>

</ContentPage>
